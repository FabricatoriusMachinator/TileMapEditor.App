<Window x:Class="TileMapEditor.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TileMapEditor.App"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <Image x:Key="Green" Source="asdasdasdsade.png" Height="64" Width="64" />
        <Image x:Key="Blue" Source="asdasdasdsade.png" Height="64" Width="64"/>
        <Image x:Key="Red" Source="asdasdasdsade.png" Height="64" Width="64"/>
    </Window.Resources>
    <ScrollViewer Margin="317,56,0,0" HorizontalScrollBarVisibility="Auto" BorderBrush="Black" BorderThickness="10">
        <ItemsControl ItemsSource="{Binding Tiles}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid Rows="8" Columns="8" Height="512" Width="512"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>

            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Button x:Name="Tile"
                        Focusable="False"
                        Command="{Binding DataContext.TileClickCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                        CommandParameter="{Binding}">
                    </Button>
                    <DataTemplate.Triggers>
                        <DataTrigger Binding="{Binding Red}" Value="True">
                            <Setter TargetName="Tile" Property="Background" Value="Red"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding Green}" Value="True">
                            <Setter TargetName="Tile" Property="Background" Value="Green"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding Blue}" Value="True">
                            <Setter TargetName="Tile" Property="Background" Value="Blue"/>
                        </DataTrigger>
                    </DataTemplate.Triggers>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </ScrollViewer>
</Window>
